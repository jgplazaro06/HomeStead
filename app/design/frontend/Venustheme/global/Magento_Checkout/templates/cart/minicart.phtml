    <script type="text/javascript">
        require(["jquery"], function($){
            $(window).ready( function(){
                $(document).on("click", "#mini-cart .add-action", function(){
                    var parent = jQuery(this).parents(".product-item");
                    var itemId = parent.find('.item-qty').data('cart-item');
                    var iQty = parseInt($('#cart-item-' + itemId + '-qty').val());
                    var productId = $(this).data('product-id');
                    if( $(this).hasClass('add-up') ) {
                        if(iQty < <?php echo $ves->getConfig('item_options/max_sale_qty','cataloginventory') ?>){
                            $('#cart-item-' + itemId + '-qty').val(parseInt(iQty+1)).trigger('change');
                            jQuery('.product-cartnumber'+itemId).html(parseInt(iQty+1));
                            parent.find('.cart-number').html(iQty+1).trigger('change');
                            qty = iQty+1;
                        }
                    }else {
                        if( iQty > 0 ) {
                            $('#cart-item-' + itemId + '-qty').val(parseInt(iQty-1)).trigger('change');
                            parent.find('.cart-number').html(iQty-1).trigger('change');
                            qty = iQty-1;
                        }
                    }
                    jQuery('.product-cartnumber'+productId).html(qty);
                    jQuery('.product-cartnumber'+productId).val(qty);
                    if(qty==0){
                        jQuery('.vesproduct-cartnumber' + productId).hide();
                    } else {
                        jQuery('.vesproduct-cartnumber' + productId).show();
                    }
                    $('[data-block="minicart"]').trigger('contentLoading');
                    parent.find(".update-cart-item").trigger("click");
                    return false;
                });
                $(document).on("click", 'a.action.delete', function(){
                    var currentId = $(this).data('product-id');
                    alert(currentId);
                    $(document).on('click', '.action-primary.action-accept', function(){
                        jQuery('.product-cartnumber'+currentId).html(0);
                        jQuery('.product-cartnumber'+currentId).val(0);
                        jQuery('.vesproduct-cartnumber' + currentId).hide();
                    });
                });
            })
        });
    </script>
